{
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  },
  "compilerOptions": {
    "allowImportingTsExtensions": "iKnowWhatImDoing",
    "baseUrl": "src",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "ESNext",
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
